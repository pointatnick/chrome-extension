{
  "manifest_version": 2,
  "name": "YouFocus",
  "version": "0.1",
  "permissions": [
    "*://*.youtube.com/",
    "tabs",
    "storage"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "YouFocus",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["jquery-3.1.1.min.js", "content.js"]
    }
  ]
}
